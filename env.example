# SwellScope Environment Configuration

# Application Settings
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/swellscope?schema=public"

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Blockchain RPC Endpoints - Always use official Swellchain RPCs
SWELLCHAIN_RPC_URL=https://swell-mainnet.alt.technology
SWELLCHAIN_TESTNET_RPC_URL=https://swell-testnet.alt.technology
ETHEREUM_RPC_URL=https://eth-mainnet.alchemyapi.io/v2/YOUR_API_KEY
OPTIMISM_RPC_URL=https://opt-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# Chain IDs
SWELLCHAIN_CHAIN_ID=1923
SWELLCHAIN_TESTNET_CHAIN_ID=1924
ETHEREUM_CHAIN_ID=1
OPTIMISM_CHAIN_ID=10

# API Keys for External Services
ALCHEMY_API_KEY=your_alchemy_api_key_here
INFURA_API_KEY=your_infura_api_key_here
ANKR_API_KEY=your_ankr_api_key_here

# Block Explorer API Keys
ETHERSCAN_API_KEY=your_etherscan_api_key_here
OPTIMISM_ETHERSCAN_API_KEY=your_optimism_etherscan_api_key_here
SWELLCHAIN_ETHERSCAN_API_KEY=your_swellchain_explorer_api_key_here

# Contract Addresses - Swellchain Mainnet
SWELLSCOPE_VAULT_ADDRESS=0x...
RISK_ORACLE_ADDRESS=0x...
SWELLCHAIN_INTEGRATION_ADDRESS=0x...

# Swell Network Contract Addresses
SWETH_TOKEN_ADDRESS=0xf951E335afb289353dc249e82926178EaC7DEd78
RSWETH_TOKEN_ADDRESS=0x...
SWELL_STAKING_ADDRESS=0x...

# Swellchain DeFi Protocol Addresses
ION_PROTOCOL_ADDRESS=0x...
AMBIENT_PROTOCOL_ADDRESS=0x...
TEMPEST_PROTOCOL_ADDRESS=0x...
ORKI_FINANCE_ADDRESS=0x...

# Bridge Contract Addresses
SWELLCHAIN_STANDARD_BRIDGE=0x...
ETHEREUM_BRIDGE_ADDRESS=0x...
OPTIMISM_BRIDGE_ADDRESS=0x...

# AVS Service Addresses
MACH_AVS_ADDRESS=0x...
VITAL_AVS_ADDRESS=0x...
SQUAD_AVS_ADDRESS=0x...

# Authentication & Security
JWT_SECRET=your_super_secure_jwt_secret_here_minimum_32_characters
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
API_RATE_LIMIT_MAX=100
STRICT_RATE_LIMIT_MAX=10

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_CONNECTION_TIMEOUT=60000

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_here
DATADOG_API_KEY=your_datadog_api_key_here

# Cache Configuration
CACHE_TTL_SECONDS=300
RISK_CACHE_TTL_SECONDS=60
PORTFOLIO_CACHE_TTL_SECONDS=120

# Risk Management Settings
EMERGENCY_EXIT_THRESHOLD=90
MAX_RISK_SCORE=100
DEFAULT_RISK_TOLERANCE=50
REBALANCE_THRESHOLD=10

# Fee Configuration (in basis points)
MANAGEMENT_FEE_BPS=50
PERFORMANCE_FEE_BPS=1000
MAX_MANAGEMENT_FEE_BPS=200
MAX_PERFORMANCE_FEE_BPS=2000

# Notification Settings
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
EMAIL_SERVICE_API_KEY=your_email_service_api_key_here

# External API Configuration
COINGECKO_API_KEY=your_coingecko_api_key_here
DUNE_API_KEY=your_dune_analytics_api_key_here
THE_GRAPH_API_KEY=your_graph_api_key_here

# IPFS Configuration
IPFS_GATEWAY_URL=https://gateway.pinata.cloud/ipfs/
PINATA_API_KEY=your_pinata_api_key_here
PINATA_SECRET_KEY=your_pinata_secret_key_here

# Development & Testing
ENABLE_DEBUG_LOGS=true
MOCK_BLOCKCHAIN_DATA=false
TEST_WALLET_PRIVATE_KEY=0x...
TESTNET_FAUCET_URL=https://faucet.swellnetwork.io

# Performance & Scaling
MAX_CONCURRENT_REQUESTS=100
DB_CONNECTION_POOL_SIZE=20
REDIS_CONNECTION_POOL_SIZE=10

# Backup & Recovery
DATABASE_BACKUP_URL=s3://your-backup-bucket/swellscope
BACKUP_INTERVAL_HOURS=24
RETENTION_DAYS=30

# Compliance & Audit
AUDIT_LOG_ENABLED=true
COMPLIANCE_MODE=false
GDPR_COMPLIANCE=true

# Next.js Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_WS_URL=ws://localhost:3001
NEXT_PUBLIC_SWELLCHAIN_RPC=https://swell-mainnet.alt.technology
NEXT_PUBLIC_SWELLCHAIN_EXPLORER=https://explorer.swellnetwork.io
NEXT_PUBLIC_SWELLCHAIN_CHAIN_ID=1923
NEXT_PUBLIC_ENABLE_TESTNETS=true

# Analytics & Metrics
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
NEXT_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token_here
NEXT_PUBLIC_HOTJAR_ID=your_hotjar_id_here

# Feature Flags
NEXT_PUBLIC_ENABLE_PORTFOLIO_MANAGEMENT=true
NEXT_PUBLIC_ENABLE_AUTOMATED_REBALANCING=true
NEXT_PUBLIC_ENABLE_CROSS_CHAIN_TRACKING=true
NEXT_PUBLIC_ENABLE_RISK_ALERTS=true
NEXT_PUBLIC_ENABLE_ADVANCED_ANALYTICS=true

# Wallet Connect Configuration
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here

# RainbowKit Configuration
NEXT_PUBLIC_RAINBOW_KIT_APP_NAME=SwellScope
NEXT_PUBLIC_RAINBOW_KIT_APP_DESCRIPTION=Advanced restaking analytics for Swellchain

# Error Tracking
NEXT_PUBLIC_SENTRY_DSN=your_frontend_sentry_dsn_here 